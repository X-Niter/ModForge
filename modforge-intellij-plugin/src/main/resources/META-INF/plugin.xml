<idea-plugin>
    <id>com.modforge.intellij.plugin</id>
    <name>ModForge</name>
    <vendor email="support@modforge.io" url="https://modforge.io">ModForge</vendor>

    <description><![CDATA[
        <h1>ModForge - AI-Powered Minecraft Mod Development</h1>
        <p>An advanced AI-powered Minecraft mod development platform that empowers developers with intelligent cross-platform tooling
        and adaptive learning technologies.</p>
        
        <h2>Key Features:</h2>
        <ul>
            <li>Comprehensive cross-loader mod creation support (Forge, Fabric, Quilt)</li>
            <li>Real-time collaboration with WebSocket support</li>
            <li>Dynamic library analysis and intelligent code generation</li>
            <li>Advanced project setup and cross-platform mod development</li>
            <li>Integrated AI-enhanced development workflow</li>
            <li>Autonomous IDE integration for improved productivity</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Services -->
        <projectService serviceImplementation="com.modforge.intellij.plugin.services.IDEIntegrationService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.services.AutomatedRefactoringService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.services.CodeAnalysisService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.services.AutonomousCodeGenerationService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.services.AutonomousIdeCoordinatorService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.ai.AIServiceManager"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.ai.PatternRecognitionService"/>
        <projectService serviceImplementation="com.modforge.intellij.plugin.collaboration.CollaborationService"/>
        
        <!-- Tool Windows -->
        <toolWindow id="ModForge" secondary="true" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="com.modforge.intellij.plugin.ui.toolwindow.ModForgeToolWindowFactory"/>
        
        <!-- Inspections -->
        <localInspection language="JAVA" shortName="ModForgeCodeAnalysis" 
                         bundle="messages.InspectionGadgetsBundle" key="modforge.inspections.group" 
                         groupKey="modforge.inspections.group" enabledByDefault="true" level="WARNING"
                         implementationClass="com.modforge.intellij.plugin.inspections.ModForgeInspection"/>
                         
        <!-- Settings -->
        <applicationConfigurable parentId="tools" instance="com.modforge.intellij.plugin.settings.ModForgeSettingsConfigurable"
                             id="com.modforge.intellij.plugin.settings.ModForgeSettingsConfigurable" 
                             displayName="ModForge"/>
        <applicationService serviceImplementation="com.modforge.intellij.plugin.settings.ModForgeSettings"/>
    </extensions>

    <actions>
        <!-- Add actions here -->
        <group id="ModForge.MainMenu" text="ModForge" description="ModForge Plugin Menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            
            <action id="ModForge.CreateModProject" class="com.modforge.intellij.plugin.actions.CreateModProjectAction"
                    text="Create Mod Project" description="Create a new Minecraft mod project"/>
                    
            <action id="ModForge.AnalyzeProject" class="com.modforge.intellij.plugin.actions.AnalyzeProjectAction"
                    text="Analyze Project" description="Analyze the current project"/>
                    
            <action id="ModForge.OptimizeCode" class="com.modforge.intellij.plugin.actions.OptimizeCodeAction"
                    text="Optimize Code" description="Optimize code in the current project"/>
                    
            <action id="ModForge.StartCollaboration" class="com.modforge.intellij.plugin.actions.StartCollaborationAction"
                    text="Start Collaboration" description="Start a collaboration session"/>
                    
            <separator/>
            
            <action id="ModForge.Settings" class="com.modforge.intellij.plugin.actions.OpenSettingsAction"
                    text="Settings" description="Open ModForge settings"/>
        </group>
        
        <!-- Editor popup menu actions -->
        <group id="ModForge.EditorPopupMenu" text="ModForge" description="ModForge Editor Actions">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            
            <action id="ModForge.GenerateImplementation" class="com.modforge.intellij.plugin.actions.GenerateImplementationAction"
                    text="Generate Implementation" description="Generate implementation for an interface"/>
                    
            <action id="ModForge.GenerateGettersAndSetters" class="com.modforge.intellij.plugin.actions.GenerateGettersAndSettersAction"
                    text="Generate Getters and Setters" description="Generate getters and setters for all fields"/>
                    
            <action id="ModForge.ImproveWithAI" class="com.modforge.intellij.plugin.actions.ImproveWithAIAction"
                    text="Improve with AI" description="Improve code with AI"/>
        </group>
    </actions>
</idea-plugin>